@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <form method="post" class="row">

            <div class="border p-4">
                @* <div asp-validation-summary="All"></div> *@
                <div class="mb-2 ">
                    <label class="p-1">Product Name</label>
                    <input asp-for="Title" class="form-control shadow" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="Description" class="p-1"></label>  
                    <input asp-for="Description" class="form-control shadow" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="ISBN" class="p-1"></label>  
                    <input asp-for="ISBN" class="form-control shadow" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="Author" class="p-1"></label>  
                    <input asp-for="Author" class="form-control shadow" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="ListPrice" class="p-1"></label>  
                    <input asp-for="ListPrice" class="form-control shadow" />
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="Price" class="p-1"></label>  
                    <input asp-for="Price" class="form-control shadow" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="Price50" class="p-1"></label>  
                    <input asp-for="Price50" class="form-control shadow" />
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="Price100" class="p-1"></label>  
                    <input asp-for="Price100" class="form-control shadow" />
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
    </div>
