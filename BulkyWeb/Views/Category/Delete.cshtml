@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <form method="post" class="row">

            <div class="border p-4">
                @* <div asp-validation-summary="All"></div> *@
                <div class="mb-4 ">
                    <label class="p-1">Category Name</label>
                    <input asp-for="Name" disabled class="form-control shadow" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="DisplayOrder" class="p-1"></label>  @* see above label, we can change these name from Category by DisplayName *@
                    <input asp-for="DisplayOrder" disabled class="form-control shadow" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
    </div>
